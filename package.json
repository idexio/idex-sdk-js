{
  "name": "@idexio/idex-node",
  "version": "0.0.8",
  "description": "Sample Node.js code for the IDEX API",
  "main": "dist/index.js",
  "repository": "git@github.com:idexio/idex-node.git",
  "author": "dileepfrog <dileepfrog@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "yarn clean; npx tsc; yarn build:documentation",
    "build:documentation": "npx documentation readme src/** --section=API --parse-extension ts --shallow --resolve node --config documentation.yaml",
    "clean": "rm -rf dist",
    "lint": "prettier-eslint $PWD/'src/**/*.ts' --write",
    "lint:markdown": "markdownlint README.md",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "crypto-js": "^4.0.0",
    "ethers": "^4.0.44",
    "query-string": "^6.11.1"
  },
  "devDependencies": {
    "@types/crypto-js": "^3.1.43",
    "@types/node": "^13.7.1",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "documentation": "^12.1.4",
    "eslint": "^6.5.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "husky": "^3.0.8",
    "markdownlint-cli": "^0.18.0",
    "prettier-eslint": "^9.0.1",
    "prettier-eslint-cli": "^5.0.0",
    "ts-node": "^8.1.0",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit_DISABLED": "yarn lint && yarn lint:markdown"
    }
  }
}
