{
  "name": "@idexio/idex-sdk",
  "version": "1.0.1",
  "description": "IDEX SDK for Javascript in the browser and Node.js",
  "license": "MIT",
  "repository": "git@github.com:idexio/idex-sdk-js.git",
  "author": "IDEX <support@idex.io>",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm-run-all -s clean -p build:*",
    "build:documentation": "npx documentation readme src/** --section=API --parse-extension ts --shallow --resolve node --config documentation.yaml",
    "build:tsc": "npx tsc",
    "clean": "rm -rf dist",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --ext .ts --fix",
    "lint:fix:package": "pretty-quick --pattern package.json",
    "lint:fix:staged": "lint-staged",
    "lint:types": "tsc --noEmit",
    "rebuild": "npx tsc",
    "start": "node dist/index.js"
  },
  "files": [
    "contracts",
    "dist",
    "tsconfig.json"
  ],
  "dependencies": {
    "axios": "^0.19.2",
    "ethers": "^4.0.44",
    "isomorphic-ws": "^4.0.1",
    "query-string": "^6.11.1",
    "ws": "^7.2.3"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "^9.0.0",
    "@types/crypto-js": "^3.1.43",
    "@types/node": "^13.7.1",
    "@types/ws": "^7.2.4",
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "commitizen": "^4.1.2",
    "conventional-changelog-conventionalcommits": "^4.3.0",
    "cz-conventional-changelog": "^3.2.0",
    "documentation": "^12.1.4",
    "eslint": "^7.5.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-typescript": "^2.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "markdownlint-cli": "^0.18.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "prettier-plugin-package": "^1.0.0",
    "pretty-quick": "^2.0.1",
    "semantic-release": "^17.1.1",
    "ts-node": "^8.10.2",
    "typescript": "^3.8.3"
  },
  "types": "dist/index.d.ts",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "pre-commit": "npm-run-all -p lint:fix:*",
      "pre-push": "npm-run-all build"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix"
    ]
  }
}
